<!--pages/goodsHelp/goodsHelp.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="content">发布求购</view>
</cu-custom>
<form bindsubmit="formSubmit">
<view class="cu-form-group">
		<view class="title">物品名称</view>
		<input placeholder="请输入求购物品名称" name="goodsTitle"></input>
  </view>
  <view class="cu-form-group">
		<view class="title">联系方式</view>
		<input placeholder="请输入联系人手机号" name="telephone"></input>
  </view>
  <view class="cu-form-group align-start">
		<view class="title">物品描述</view>
		<textarea maxlength="-1" disabled="{{modalName!=null}}" name="goodsDescription" placeholder="请输入关于物品的要求和描述"></textarea>
  </view>
  <view class="padding flex flex-direction">
  <button class="cu-btn bg-gradual-blue margin-tb-sm lg" form-type='submit'>提交</button>
</view>
</form>
