/* pages/about/about.wxss */
.zmall-top{
  height: calc(200px + env(safe-area-inset-bottom) / 2);
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  
}
.ZCenter-avatar {

  width: 80px;
  height: 80px;
 
}

.ZCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom:0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
.zmall-wh{
  height: 50px;
  width: 100%;
  background-color: white;
}

.cu-bar-outside{
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: 2;
}
.zmall-positon-top-fixed{
  position: fixed;
  width: 100%;
  z-index: 2;
}

.zmall-modal-content {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}


.zmall-model-item {
  margin: 0 50px;
  margin-top: -120px;
  height: 50px;
}

.zmall-model-item text {
  font-size: 36rpx;

}
.zmall-model-item view[class*="cuIcon-"] {
  font-size: 80rpx;
}

