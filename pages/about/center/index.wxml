<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="content">信工二手数码市场</view>
</cu-custom>
<form bindsubmit = "formSubmit">
	<view class="cu-form-group">
		<view class="title">手机号码</view>
		<input name="telephone" placeholder="17816096113"></input>
		<view class="cu-capsule radius">
			<view class="cu-tag bg-blue">
				+86
			</view>
			<view class="cu-tag line-blue">
				中国大陆
			</view>
		</view>
  </view>
  <view class="cu-form-group">
		<view class="title">邮箱账号</view>
		<input name="email" placeholder="2012679616@qq.com"></input>
  </view>
  <view class="cu-form-group">
		<view class="title">登陆密码</view>
		<input name="password" placeholder="123456"></input>
  </view>
  <view class="padding flex flex-direction">
  <button class="cu-btn bg-gradual-blue margin-tb-sm lg" form-type='submit'>修改</button>
  </view>
  </form>